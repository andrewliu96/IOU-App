<%= form_for(@payment) do |f| %>
  <div class="form-group">
    <%= render 'shared/error_messages', obj: @payment %>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :sender %>
      <%= f.select :sender_id, User.all.map{|u| [u.name, u.id]}, {include_blank: "Choose"}, {class: 'form-control'} %>
    </div>
    <div class="col-md-6">
      <%= f.label :receiver %>
      <%= f.select :receiver_id, User.all.map{|u| [u.name, u.id]}, {include_blank: "Choose"}, {class: 'form-control'} %>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="form-group m-t-2">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control', placeholder: 'Payment for the groceries Feb. 29th' %>
  </div>
  <fieldset class="form-group m-t-2">
    <%= f.label :amount %>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= f.number_field :amount, class: 'form-control', step: '0.01', placeholder: '12.00' %>
    </div>
  </fieldset>
  <div class="form-group m-t-2">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: 'form-control', placeholder: 'Payment for the groceries Feb. 29th' %>
  </div>
  <fieldset class="form-group">
    <%= f.submit 'Save payment', class: 'btn btn-primary' %>
  </fieldset>

<% end %>
