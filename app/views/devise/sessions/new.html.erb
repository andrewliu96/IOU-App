

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <!-- Where all the magic happens -->
  <!-- LOGIN FORM -->
  <div class="text-center" >
    <div class="logo">Login</div>
    <!-- Main Form -->
    <div class="login-form-1">
      <form id="login-form" class="text-left">
        <div class="login-form-main-message"></div>
        <div class="main-login-form">
          <div class="login-group">
            <div class="form-group">
              <label for="lg_username" class="sr-only"></label>
              <input type="text" class="form-control" id="lg_username" name="user[email]" placeholder="email">
            </div>
            <div class="form-group">
              <label for="lg_password" class="sr-only"></label>
              <input type="password" class="form-control" id="lg_password" name="user[password]" placeholder="password">
            </div>
            
          </div>
          <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
        </div>
        <div class="etc-login-form">
        <%= render "devise/shared/links" %>
        </div>
      </form>
    </div>
    <!-- end:Main Form -->
  </div>
<% end %>


