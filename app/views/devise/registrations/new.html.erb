
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!-- Where all the magic happens -->
  <!-- LOGIN FORM -->
  <div class="">
  <div class="text-center" >
    <div class="logo">Join us, sign up.</div>
    <!-- Main Form -->
    <div class="login-form-1">
      <form id="register-form" class="text-left">
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <label for="reg_fullname" class="sr-only"></label>
            <input type="text" class="form-control" id="reg_fullname" name="user[name]" placeholder="full name" required>
          </div>
          <div class="form-group">
            <label for="reg_email" class="sr-only"></label>
            <input type="email" class="form-control" id="reg_email" name="user[email]" placeholder="email" required>
          </div>
          <div class="form-group">
            <label for="reg_password" class="sr-only"></label>
            <input type="password" class="form-control" id="reg_password" name="user[password]" placeholder="password" required>
          </div>
          <div class="form-group">
            <label for="reg_password_confirm" class="sr-only"></label>
            <input type="password" class="form-control" id="reg_password_confirm" name="user[password_confirmation]" placeholder="confirm password" required>
          </div>
          
          
           </div>
          <button type="submit" class="login-button"><%= render "devise/shared/links" %><i class="fa fa-chevron-right"></i></button>
       
        
      </div>
      
    </form>
    </div>
    <!-- end:Main Form -->
  </div>
<% end %>

