<h1>Create a group</h1>
<div class="col-md-6">
  <%= form_for @group do |f| %>
    <%= render 'shared/error_messages', obj: @group %>

    <fieldset class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    </fieldset>
  <% end %>
</div>
